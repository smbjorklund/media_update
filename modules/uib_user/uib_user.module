  return theme_field(array(
    'label' => $label,
    'label_hidden' => FALSE,
    'classes' => $class,
    'element' => array('#field_name' => ''),
    'items' => array(
      array(
        '#markup' => $data,
        ),
      ),
    'attributes' => '',
    'title_attributes' => '',
    'content_attributes' => '',
    'item_attributes' => array(0 => ''),
    )
  );
}

