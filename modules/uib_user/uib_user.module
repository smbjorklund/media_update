/**
 * Changes the markup of a rendered RSS feed.
 *
 * @param [string] Markup for the RSS feed
 *
 */

function uib_user__feed_format_post_render($markup) {
  $markup = preg_replace('/<h3(.*?)>(.*?)<\/h3>/','<h2 class="block__title block-title">\2</h2>', $markup);
  return $markup;
}
