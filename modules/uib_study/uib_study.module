          $semester = uib_study__get_current_semester();
          $tmp = uib_study__get_schedule_link($study_code, $semester);
          $resources['#items'][] = render($tmp);
          $tmp = uib_study__get_reading_list_link($study_code, $semester);
          $resources['#items'][] = render($tmp);
