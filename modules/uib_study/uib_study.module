                );
                foreach ($cells as $cell) {
                  $t_row[] = array(
                    'data' => $cell,
                    'class' => 'uib-study-data',
                  );
                }
                #$t_row[] = uib_study__study_link($s_row['emnekode']);
                #$t_row[] = uib_study__study_link($s_row['emnekode'], $s_row['name']);
                #$t_row[] = $s_row['sp'];
                #$t_row[] = $s_row['s'];
                #$t_row[] = $s_row['a'];
              }
              else {
