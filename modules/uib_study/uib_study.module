/**
 * Expand semester code to a text
 */
function uib_study__semester_name($code = NULL) {
  if (!empty($code)) {
    if (substr($code, 4, 1) == 'v') {
      $name = t('Spring');
    }
    else {
      $name = t('Fall');
    }
    $name .= ' ' . substr($code, 0, 4);
    return $name;
  }
}

