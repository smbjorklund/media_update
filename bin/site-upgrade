#!/bin/bash

set -x

bin/site-drush cc all

COMMIT=${1:-master}
git checkout $COMMIT
git submodule update

compass compile --force themes/uib_zen
find site/files/{css,js,languages} -type f -print | xargs rm

bin/site-drush updatedb --yes
bin/site-drush cc all
bin/site-drush features-revert-all --yes
bin/site-drush cc all
