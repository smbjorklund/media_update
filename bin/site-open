#!/bin/sh

SITE_URL=http://$(basename $(readlink site))
if test ! -z "$1"; then
    SITE_PATH=$1
    SITE_PATH=$(perl -le '$p = shift; $p =~ s,^https?://[^/]+/,,; print $p;' $SITE_PATH)
    SITE_URL=$SITE_URL/$SITE_PATH
fi

echo $SITE_URL

if [ "$(uname -s)" = "Darwin" ]; then
    open $SITE_URL
fi
