#!/bin/bash

set -x

REL=2

if git tag | grep -q R$REL; then
    echo "Disabled after $REL has been released";
    exit 1
fi

# Import the Norwegian and English news areas
bin/site-drush mi Area --strict=0 --serial=8314982073342080046,8314982073342080055 --verbose

# Import articles
bin/site-drush mi News -v --strict=0 --w2prefix=/news
bin/site-drush mi News -v --strict=0 --w2prefix=/aktuelt

# Set up example frontpage and news areas
bin/site-drush php-script r2-setup-frontpage-and-newspage

# Make sure the cache is really blenda-clean
bin/site-drush cc all
