#!/bin/bash

set -x

REL=6

if git tag | grep -q R$REL; then
    echo "Disabled after $REL has been released";
    exit 1
fi

#exit  # keep statements below around until the next migration

# Migrate uib.no/project/speakup
bin/site-drush migrate-import --verbose Area --strict=0 --area_subset=uib_areas_subset_matnat.txt
bin/site-drush migrate-import --verbose NavPage --strict=0 --area_subset=uib_areas_subset_matnat.txt
bin/site-drush migrate-import --verbose InfoPage --strict=0 --area_subset=uib_areas_subset_matnat.txt
bin/site-drush migrate-import --verbose News --strict=0 --area_subset=uib_areas_subset_matnat.txt
bin/site-drush migrate-import --verbose Event --strict=0 --area_subset=uib_areas_subset_matnat.txt
bin/site-drush migrate-import --verbose Testimonial --strict=0 --area_subset=uib_areas_subset_matnat.txt

# Build area menu for migrated content
bin/site-drush uib-migrate-build-menu --verbose

# Split Area menu for newly migrated content
bin/site-drush uib-area-menu-chk
bin/site-drush uib-area-split-menu --verbose
bin/site-drush uib-area-menu-to-relation

# Fill in missing parents after migration
bin/site-drush php-script area-parents --force

# Make sure the cache is really blenda-clean
bin/site-drush cc all
