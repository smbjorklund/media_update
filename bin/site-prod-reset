#!/bin/bash

set -x

PGUSER=$(php --run 'include "site/settings.php"; print($databases["default"]["default"]["username"]);')
PSQL=$(bin/site-drush sql-connect)
PGDUMP_HOST=${PGDUMP_HOST:-vengeance.uib.no}

test -L site || exit 1
SITE=$(basename $(readlink site))

if [ "$PGDUMP_HOST" != "none" ]; then
    rsync -rltDih --delete $PGDUMP_HOST:/prod_nettapp_w3/sites/w3.uib.no/files/ site/files/
    find site/files/ -type d | xargs chmod 777
    find site/files/ -type f | xargs chmod 666

    LAST_DUMP=$(ssh $PGDUMP_HOST "ls -t /prod_nettapp_w3/pg_dump | head -n 1")
    rsync -avh $PGDUMP_HOST:/prod_nettapp_w3/pg_dump/$LAST_DUMP site/w3.uib.no.sql
fi

bin/site-drush sql-drop --yes
perl -pe "s/\bw3_(?:user|admin)\b/$PGUSER/g" site/w3.uib.no.sql | perl -pe "s/^CREATE TABLE/CREATE UNLOGGED TABLE/" | $PSQL --echo-queries >site/pg.out 2>&1
bin/pg_error_report --ignore-drop site/pg.out

rm -rf drupal/sites/w3.uib.no
ln -s $SITE drupal/sites/w3.uib.no

bin/site-drush cc all
