#!/bin/bash

dirs='w3.uib.no w3-kurs.uib.no'
logdir=/tmp/drupal-cron-log
mkdir -p ${logdir} 
chmod 755 ${logdir} 
for dir in $dirs ;do 
  if [ -d /var/www/$dir ] ;then
    cd /var/www/$dir || exit 1 
    nice su w3-drupal -c 'bin/site-drush -v cron &>> ${logdir}/drupal-cron-${dir}-$(date -I)T$(date +%H%m).log'
  else
    echo dir /var/www/$dir not exist | logger -t $0
  fi
done
